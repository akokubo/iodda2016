<% provide(:title, "市町村の一覧") %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Municipality.human_attribute_name(:code) %></th>
      <th><%= Municipality.human_attribute_name(:name) %></th>
      <th><%= Municipality.human_attribute_name(:lat) %></th>
      <th><%= Municipality.human_attribute_name(:lng) %></th>
    </tr>
  </thead>

  <tbody>
    <% @municipalities.each do |municipality| %>
      <tr>
        <td><%= municipality.code %></td>
        <td><%= municipality.name %></td>
        <td><%= municipality.lat %></td>
        <td><%= municipality.lng %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

