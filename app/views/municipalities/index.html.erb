<% provide(:title, "市町村の一覧") %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<p id="notice"><%= notice %></p>
<p><%= link_to '市町村の追加', new_municipality_path %></p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Municipality.human_attribute_name(:code) %></th>
      <th><%= Municipality.human_attribute_name(:name) %></th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @municipalities.each do |municipality| %>
      <tr>
        <td><%= municipality.code %></td>
        <td><%= municipality.name %></td>
        <td><%= link_to '詳細表示', municipality %></td>
        <td><%= link_to '編集', edit_municipality_path(municipality) %></td>
        <td><%= link_to '削除', municipality, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

