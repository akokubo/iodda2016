<% provide(:title, "グラフ一覧") %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<p id="notice"><%= notice %></p>
<p>
  <%= link_to 'グラフの登録', new_chart_path, class: "btn btn-primary" %>
</p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Chart.human_attribute_name(:name) %></th>
      <th><%= Chart.human_attribute_name(:author) %></th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @charts.each do |chart| %>
      <tr>
        <td><%= chart.name %></td>
        <td><%= chart.author %></td>
        <td><%= link_to 'グラフの表示', chart.url %></td>
        <td><%= link_to '削除', chart, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
