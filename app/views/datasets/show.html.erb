<% provide(:title, @dataset.name) %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<%= link_to '視覚化', visualize_dataset_path(@dataset), class: 'btn btn-primary' %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <th><%= Datum.human_attribute_name(:municipality) %></th>
    <th><%= Datum.human_attribute_name(:value) %></th>
  </thead>
  <tbody>
  <% if @dataset.data.any? %>
    <%= render @data %>
  <% end %>
  </tbody>
</table>
