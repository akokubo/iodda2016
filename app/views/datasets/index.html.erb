<% provide(:title, "データセット一覧") %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<p id="notice"><%= notice %></p>
<p><%= link_to 'データセットの登録', new_dataset_path, class: "btn btn-primary" %></p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Dataset.human_attribute_name(:name) %></th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= dataset.name %></td>
        <td><%= link_to 'データの表示', dataset %></td>
        <td><%= link_to '削除', dataset, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
