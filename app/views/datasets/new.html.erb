<% provide(:title, 'データセットの登録') %>
<div class="page-header">
  <h1><%= yield(:title) %></h1>
</div>

<p><%= link_to "データセットの作り方", how_to_create_datasets_path %></p>

<hr>
<%= form_for @dataset, html: { class: "form-horizontal", role: "form" } do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "総人口(平成XX年)など" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control", placeholder: "青森太郎など" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "データの説明、データをどこ(URLとか)から持ってきてどのように加工したかなど" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :file, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :file, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "データセットを登録", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
